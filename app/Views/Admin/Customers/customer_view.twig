{% extends './layout.twig' %}
{% block title %}Edit Products{% endblock %}
{% block content %}
    <div class="container">
        <div class="edit-customer-form" id="edit-customer-form">
            <h2>Thông tin sản phẩm</h2>
            <form id="edit-customers-form" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="customerId">Mã KH:</label>
                            <input type="text" class="form-control" id="customerId" name="customerId" readonly
                                   value="{{ customer.id }}">
                        </div>
                        <div class="form-group mb-3">
                            <label for="customerName">Tên KH:</label>
                            <input type="text" class="form-control" id="customerName" name="customerName"
                                   value="{{ customer.name }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="customerPrice">Giá:</label>
                            <input type="text" class="form-control" id="customerPrice" name="customerPrice"
                                   value="{{ customer.price }}" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="customerCategoryId">Mã thể loại:</label>
                            <select class="form-control" id="customerCategoryId" name="customerCategoryId">
                                <option value="1">Bánh mì</option>
                                <option value="2">Bánh ngọt</option>
                                <option value="3">Bánh kem nhỏ</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="customerStock">Số lượng:</label>
                            <input type="text" class="form-control" id="customerStock" name="customerStock"
                                   value="{{ customer.stock }}" required>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Lưu</button>
                <a href="/admin/customers" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
{% endblock %}
{% block scripts %}
{% endblock %}
