{% set page = 'customers' %}
{% extends './layout.twig' %}

{% block title %}Khách hàng{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/jszip-3.10.1/dt-2.0.6/b-3.0.2/b-colvis-3.0.2/b-html5-3.0.2/b-print-3.0.2/sp-2.3.1/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0">Trang chi tiết khách hàng</h3>
    </div>
    <div class="card shadow">
        <div class="card-body">
            <div class="row row-cols-lg-2">
                <div class="col col-12 col-lg-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">THÔNG TIN TÀI KHOẢN</h5>
                            <p class="card-text">Họ và tên: {{ customer.name }}</p>
                            <p class="card-text">Email: {{ customer.email }}</p>
                            <p class="card-text">Số lượng đơn hàng: {{ customer.orders }}</p>
                            <p class="card-text">Tổng chi tiêu: {{ customer.total_spent }}</p>
                        </div>
                    </div>
                </div>
                <div class="col col-12 col-lg-8 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">ĐƠN HÀNG</h5>

                            <div class="table-responsive table" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                <table id="order-table" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <th>Mã phiếu</th>
                                    <th>Trạng thái đơn hàng</th>
                                    <th>Giá trị đơn hàng</th>
                                    <th>Ngày đặt</th>
                                    </thead>
                                    <tbody>
                                    {% for order in orders %}
                                        {% set status = statuses[order.status] %}
                                        <tr data-id="{{ order.id }}">
                                            <td><a href="/account/order-details?id={{ order.id }}">#O{{ order.id }}</a></td>
                                            <td><span class="badge text-bg-{{ status.color }}">{{ status.name }}</span></td>
                                            <td>{{ order.total_price }}</td>
                                            <td>{{ order.created_at }}</td>
                                        </tr>
                                    {% endfor%}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/jszip-3.10.1/dt-2.0.6/b-3.0.2/b-colvis-3.0.2/b-html5-3.0.2/b-print-3.0.2/sp-2.3.1/sl-2.0.1/datatables.min.js"></script>


    <script>
        $(document).ready(function() {
            var table = $('#order-table').DataTable({
                "language": {
                    "decimal"       : "",
                    "emptyTable"    : "Không có dữ liệu trong bảng",
                    "info"          : "Hiển thị _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "infoEmpty"     : "Hiển thị 0 đến 0 trong tổng số 0 mục",
                    "infoFiltered"  : "(được lọc từ tổng số _MAX_ mục)",
                    "infoPostFix"   : "",
                    "thousands"     : ",",
                    "lengthMenu"    : "Hiển thị _MENU_ mục",
                    "loadingRecords": "Đang tải...",
                    "processing"    : "",
                    "search"        : "Tìm kiếm:",
                    "zeroRecords"   : "Không tìm thấy bản ghi phù hợp",
                }
            });

        });
    </script>
{% endblock %}