{% extends 'layout.twig' %}

{% block title %}Danh sách quyền{% endblock %}
{% block content %}
    <div class="d-flex justify-content-end flex-wrap flex-md-nowrap align-items-center mb-1">
        <a href="/admin/roles/add" class="btn btn-success">Thêm</a>
    </div>
    <div class="table-responsive small">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên quyền</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Action</th>

            </tr>
            </thead>
            <tbody>
            {% for i in 1..5 %}
                <tr>
                    <th scope="row">{{ i }}</th>
                    <td>Tên quyền</td>
                    <td>Đây là mô tả quyền ::????</td>
                    <td>
                        <a type="button" class="btn btn-primary btn-sm" href="/admin/roles/edit?id={{ i }}">Sửa</a>
                        <button type="button" class="btn btn-danger btn-sm">Xóa</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}