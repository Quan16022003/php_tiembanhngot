{% set page = 'permissions' %}

{% extends 'layout.twig' %}

{% block title %}Danh sách quyền{% endblock %}
{% block content %}
    <div class="d-flex justify-content-end flex-wrap flex-md-nowrap align-items-center mb-1">
        <a href="/admin/permissions/add" class="btn btn-success">Thêm</a>
    </div>
    <div class="table-responsive small">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên quyền</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Action</th>

            </tr>
            </thead>
            <tbody>
            {% for per in permissions %}
                <tr id="permission_row_{{ per.id }}">
                    <th scope="row">{{ per.id }}</th>
                    <td>{{ per.name }}</td>
                    <td>{{ per.describe }}</td>
                    <td>
                        <a type="button" class="btn btn-primary btn-sm" href="/admin/permissions/edit?id={{ per.id }}">Sửa</a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="del({{ per.id }}, {{ per.hasUse }})">Xóa</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block scripts %}
<script type="text/javascript">
    function del(permissionId, hasUse) {
        if (hasUse) {
            alert("Quyền này đang được sử dụng không thể xóa!");
            return;
        }
        if (confirm("Bạn có muốn xóa quyền có id là " + permissionId + " không? ")) {
            $.ajax({
                url: '/admin/permissions/delete',
                method: 'POST',
                data: {
                    id: permissionId
                },
                success: function (response) {
                    response = JSON.parse(response);
                    console.log(response);

                    alert(response.message);
                    if (response.success) {
                        const $row = $('#permission_row_' + permissionId);
                        $row.remove();
                    }
                },
                error: function (xhr, status, error) {
                    alert('Đã có lỗi xảy ra. Vui lòng thử lại sau.');
                }
            });
        }
    }

</script>
{% endblock %}