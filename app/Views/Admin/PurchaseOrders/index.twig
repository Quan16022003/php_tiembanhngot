{% set page = 'purchase_orders' %}
{% extends './layout.twig' %}

{% block title %}Purchase Orders{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/jszip-3.10.1/dt-2.0.6/b-3.0.2/b-colvis-3.0.2/b-html5-3.0.2/b-print-3.0.2/sp-2.3.1/datatables.min.css" rel="stylesheet">
    <style>
        #example tbody tr:hover td {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0">Purchase Order</h3>
        <a class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="/admin/purchase_orders/new">Create purchase order</a>
    </div>
    <div class="card shadow">
        <div class="card-header">
            <div>
                <a class="status-filter btn btn-light {% if status_active == ''%}active{% endif %}" href="/admin/purchase_orders">All</a>
                {% for status in all_status %}
                    <a class="btn btn-light {% if status.code == status_active %}active{% endif %}" href="/admin/purchase_orders?status={{ status.code }}">{{ status.name }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive table" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table id="example" class="table table-hover table-bordered table-sm" style="width:100%">
                    <thead>
                        <th>Mã phiếu</th>
                        <th>Nhà cung cấp</th>
                        <th>status</th>
                        <th>Received</th>
                        <th>Total</th>
                        <th>Expected arrival</th>
                    </thead>
                    <tbody>
                        {% for purchase_order in purchase_orders%}
                            <tr data-id="{{ purchase_order.id }}">
                                <td>#PO{{ purchase_order.id }}</td>
                                <td>{{ purchase_order.supplier }}</td>
                                <td><span class="badge" style="background: {{ purchase_order.status_color }}">{{ purchase_order.status_name }}</span></td>
                                <td>{{ purchase_order.received }}</td>
                                <td>{{ purchase_order.total }}</td>
                                <td>{{ purchase_order.delivery_date }}</td>
                            </tr>
                        {% endfor%}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/jszip-3.10.1/dt-2.0.6/b-3.0.2/b-colvis-3.0.2/b-html5-3.0.2/b-print-3.0.2/sp-2.3.1/sl-2.0.1/datatables.min.js"></script>


    <script>
        $(document).ready(function() {
            var table = $('#example').DataTable({
                "language": {
                    "decimal"       : "",
                    "emptyTable"    : "Không có dữ liệu trong bảng",
                    "info"          : "Hiển thị _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "infoEmpty"     : "Hiển thị 0 đến 0 trong tổng số 0 mục",
                    "infoFiltered"  : "(được lọc từ tổng số _MAX_ mục)",
                    "infoPostFix"   : "",
                    "thousands"     : ",",
                    "lengthMenu"    : "Hiển thị _MENU_ mục",
                    "loadingRecords": "Đang tải...",
                    "processing"    : "",
                    "search"        : "Tìm kiếm:",
                    "zeroRecords"   : "Không tìm thấy bản ghi phù hợp",
                }
            });

            $('#example tbody').on('click', 'tr', function() {
                var POId = $(this).data('id');
                window.location.href = "/admin/purchase_orders/" + POId;
            });
            $('#example tbody tr:hover td').css('font-weight', 'bold');

            $('#example tbody').on('mouseout', 'tr', function() {
                $(this).find('td').css('font-weight', 'normal');
            });
        });
    </script>
{% endblock %}