{% extends 'layout.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="../css/admin_login.css">
{% endblock %}

{% block title %}Login{% endblock %}
{% block content %}
    <div class="container">
        <form class="form-login w-100 m-auto mt-5">
            <img class="mb-4" src="../images/logo.png" alt="" height="57">
            <h1 class="h3 mb-3 fw-normal">Đăng nhập</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Tên đăng nhập">
                <label for="floatingInput">Tên đăng nhập</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Mật khẩu">
                <label for="floatingPassword">Mật khẩu</label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Đăng nhập</button>
        </form>
    </div>
{% endblock %}