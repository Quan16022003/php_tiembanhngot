<!-- cart.twig -->

{% extends 'layout.twig' %}

{% block content %}
    <h1>Your Cart</h1>
    {% if carts is empty %}
        <p>Your cart is empty.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for cart in carts %}
                <tr>
                    <td>{{ cart.product_name }}</td>
                    <td>{{ cart.price }}</td>
                    <td>{{ cart.quantity }}</td>
                    <td>{{ cart.total }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
