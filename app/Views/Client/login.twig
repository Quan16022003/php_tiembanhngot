{% extends './layout.twig' %}

{% block title %}Đăng nhập - My Website{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        #alert, #register-box, #forgot-box, #loader {
            display: none;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-lg-4 offset-lg-4" id="alert">
                <div class="alert alert-success">
                    <strong id="result"></strong>
                </div>
            </div>
        </div>
        <div class="text-center" id="loader">
            <div class="spinner-border text-center" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <!-- login form -->
        <div class="row m-3">
            <div class="col-md-4 offset-md-4 rounded" id="login-box">
                <h2 class="text-center mt-2">Đăng nhập</h2>

                <form role="form" class="p-2" id="login-frm">
                    <div class="mb-2">
                        <label for="usernameInput" class="mb-1">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="usernameInput" name="username" autofocus required minlength="5" pattern="^[a-zA-Z0-9]+$">
                    </div>
                    <div class="mb-2">
                        <label for="passwordInput" class="mb-1">Mật khẩu</label>
                        <input type="password" class="form-control" id="passwordInput" name="password" required minlength="6" pattern="^[a-zA-Z0-9]+$">
                    </div>
                    <div class="mb-2 d-flex align-items-center">
                        <div class="form-check">
                            <input type="checkbox" name="rem" class="form-check-input" id="customCheck">
                            <label for="customCheck" class="custom-control-label">Ghi nhớ tài khoản</label>
                        </div>
                        <a href="#recovery" id="forgot-btn" class="ms-auto">Quên mật khẩu?</a>
                    </div>
                    <button type="submit" name="login" id="login" value="Login" class="btn btn-primary w-100">Đăng nhập</button>
                </form>
                <div class="mb-3">
                    <p class="text-center">Người dùng mới? <a href="#" id="register-btn">Đăng ký tại đây</a></p>
                </div>
            </div>
        </div>

        <!-- registration form -->
        <div class="row">
            <div class="col-lg-4 offset-lg-4" id="register-box">
                <h2 class="text-center mt-2">Đăng ký</h2>

                <form action="" method="post" role="form" class="p-2" id="register-frm">
                    <div class="mb-2">
                        <label for="name" class="form-label">Họ và tên</label>
                        <input type="text" name="name" class="form-control" id="name" required minlength="6" autofocus>
                    </div>

                    <div class="mb-2">
                        <label for="uname" class="form-label">Tên người dùng</label>
                        <input type="text" name="uname" class="form-control" id="uname" required minlength="6">
                    </div>

                    <div class="mb-2">
                        <label for="email" class="form-label">E-Mail</label>
                        <input type="email" name="email" class="form-control" id="email" required minlength="13">
                    </div>

                    <div class="mb-2">
                        <label for="pass" class="form-label">Mật khẩu</label>
                        <input type="password" name="pass" class="form-control" id="pass" required minlength="6">
                    </div>

                    <div class="mb-2">
                        <label for="cpass" class="form-label">Xác nhận mật khẩu</label>
                        <input type="password" name="cpass" class="form-control" id="cpass">
                    </div>

                    <div class="mb-2">
                        <div class="form-check">
                            <input type="checkbox" name="rem" class="form-check-input" id="customCheck2">
                            <label for="customCheck2" class="form-check-label">Tôi đồng ý với <a href="#">điều khoản và điều kiện.</a></label>
                        </div>
                    </div>
                    <div class="mb-2">
                        <input type="submit" name="register" id="register" value="Đăng ký" class="btn btn-primary w-100">
                    </div>
                    <div class="mb-2">
                        <p class="text-center">Đã có tài khoản? <a href="#" id="login-btn">Đăng nhập tại đây</a></p>
                    </div>
                </form>
            </div>
        </div>

        <!-- forgot password form -->
        <div class="row">
            <div class="col-lg-4 offset-lg-4 rounded" id="forgot-box">
                <h2 class="text-center mt-2">Khôi phục mật khẩu</h2>

                <form action="" method="post" role="form" class="p-2" id="forgot-frm">
                    <div class="mb-2">
                        <small class="text-muted">
                            Để đặt lại mật khẩu của bạn, nhập địa chỉ email và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu
                            vào email của bạn.
                        </small>
                    </div>

                    <div class="mb-2">
                        <label for="femail" class="form-label">E-Mail</label>
                        <input type="email" name="femail" class="form-control" id="femail" required minlength="13">
                    </div>

                    <div class="mb-2">
                        <input type="submit" name="forgot" id="forgot" value="Khôi phục" class="btn btn-primary btn-block w-100">
                    </div>

                    <div class="mb-2 text-center">
                        <a href="#" id="back-btn">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
{% endblock %}

{% block scripts %}
    <script src="/public/js/index-js.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js" integrity="sha512-WMEKGZ7L5LWgaPeJtw9MBM4i5w5OSBlSjTjCtSnvFJGSVD26gE5+Td12qN5pvWXhuWaWcVwF++F7aqu9cvqP0A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}