<div class="modal fade" id="registrationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrationModalLabel">Registration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Registration Form -->
                <form action="" method="post" role="form" id="register-frm">
                    <div class="mb-3">
                        <input type="text" name="name" class="form-control" placeholder="Họ tên" required minlength = "6">
                    </div>

                    <div class="mb-3">
                        <input type="text" name="uname" class="form-control" placeholder="Tên đăng nhập" required minlength = "6">
                    </div>

                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Địa chỉ e-mail" required minlength = "13">
                    </div>

                    <div class="mb-3">
                        <input type="password" name="pass" class="form-control" placeholder="Mật khẩu" required minlength = "6">
                    </div>

                    <div class="mb-3">
                        <input type="password" name="cpass" class="form-control" placeholder="Xác nhận mật khẩu">
                    </div>

                    <div class="mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="form-check-input" name="rem" class="custom-control-input" id="customCheck2">
                            <label for="customCheck2" class="custom-control-label">I agree to the <a href="#">terms & conditions.</a></label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="submit" name="register" id="register" value="Register" class="btn btn-primary btn-block">
                    </div>
                </form>
                <div class="mb-3">
                    <p>Nếu bạn đã có tài khoản, vui lòng <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#loginModal">Đăng nhập</button></p>
                </div>
            </div>
        </div>
    </div>
</div>